{
  "include": ["src/*/**.ts", "src/*/**.tsx", "src/index.ts", "typings.d.ts"],
  "compilerOptions": {
    "outDir": "es",
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {},
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "exclude": ["node_modules", "lib", "es", "dist", "typings", "**/__test__", "test", "jest.config.ts"]
}
